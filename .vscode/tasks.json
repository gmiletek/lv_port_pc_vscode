{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "command": "${env:MINGW_PATH}/bin/cmake.exe",
            "args": ["--build", "${command:cmake.buildDirectory}"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "${workspaceFolder}/bin/main",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "Build"
        }
    ]
}
